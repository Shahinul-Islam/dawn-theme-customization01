        border-right:0;
        border-style: {{section.settings.border_style}};
        border-color:{{section.settings.border_color}};
        padding-top:{{section.settings.top_padding | times: 0.75}};
        padding-bottom:{{section.settings.bottom_padding | times: 0.75}};
        margin-top:{{section.settings.top_margin | times: 0.75}};
