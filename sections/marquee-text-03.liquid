    }

.icon {
  
  margin-left: 4px;
  margin-right: 4px;
  vertical-align: middle;
}

.loop-text-{{section.id}} {
  font-size: {{section.settings.text_size |  times: 0.75}};
  text-transform: {{section.settings.text_transform}};
  font-weight: {{section.settings.text_weight}};
  line-height: {{section.settings.line_height}};
  letter-spacing:{{section.settings.letter_spacing}};
  font-style:{{section.settings.custom_font_style}};
  padding: {{section.settings.message_padding}};
  display: flex;
  align-items: center;
  justify-content:center;
  margin:0px;
}
@media screen and (min-width:750px){
 .loop-text-{{section.id}}{
  font-size: {{section.settings.text_size}};
 } 
 .container-{{section.id}} {
        padding-top:{{section.settings.top_padding}};
        padding-bottom:{{section.settings.bottom_padding}};
        margin-top:{{section.settings.top_margin}};
        margin-bottom:{{section.settings.bottom_margin}};
 }
}
.message-{{section.id}} a{
  text-decoration: none;
  color: inherit!important;
}

.message-{{section.id}} a:visited{
  color: inherit!important;
}

{% if section.settings.direction == "left" %}
    .loop-text-{{section.id}} {
      animation: loopTextLtR {{ section.settings.speed }}s infinite linear;
    }
  {% else %}
    .loop-text-{{section.id}} {
      animation: loopText {{ section.settings.speed }}s infinite linear;
    }
  {% endif %}
{% if section.settings.pause_on_hover %} 
    .container-{{section.id}}:hover .loop-text-{{section.id}}{
        animation: none;
    }
    
{% endif %}

@keyframes loopText {
  from {
    transform: translateX(0);
  }

  to {
    transform: translateX(-100%);
  }
}
@keyframes loopTextLtR {
  from {
    transform: translateX(-100%);
  }

  to {
    transform: translateX(0);
  }
}

